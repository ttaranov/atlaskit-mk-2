{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "esnext",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise",
      "es2016.array.include",
    ],
    "types": ["jest", "react", "enzyme", "css-color-names", "jest-styled-components", "styled-components"],
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "files": [
    "./typings/atlaskit.d.ts",
    "./typings/package.json.d.ts",
    "./typings/json.d.ts",
    "./typings/jest.frameworkSetup.d.ts",
    "./typings/node.d.ts",
    "./typings/prosemirror-markdown.d.ts",

    "./typings/webpack.d.ts",
    "./typings/rusha.d.ts",
    "./typings/uuid.d.ts",
    "./typings/lodash.last.d.ts",
    "./typings/lodash.debounce.d.ts",
    "./typings/lodash.matches.d.ts",
    "./typings/jest-in-case.d.ts",

    "./typings/deep-equal.d.ts",
    "./typings/pdfjs-dist.d.ts",
    "./typings/events.d.ts",
    "./typings/deepcopy.d.ts",
    "./typings/scrollparent.d.ts",
    "./typings/react-dom.d.ts",
    "./typings/url.d.ts",
    "./typings/postis.d.ts"
  ],
  "include": [
    "./packages/**/*",
  ]
}
